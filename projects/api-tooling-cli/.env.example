# Environment variables for apitool-cli
# Copy this file to .env and configure as needed

# Encryption settings
ENCRYPTION_ALGORITHM=aes-256-cbc

# Storage settings
CREDENTIAL_DIR=~/.apitool
CREDENTIAL_FILE=credentials.enc
METADATA_FILE=metadata.json

# Default settings
DEFAULT_MOCK_COUNT=1
DEFAULT_PAGINATION_LIMIT=20
DEFAULT_DIAGRAM_DEPTH=2

# Output settings
DEFAULT_OUTPUT_FORMAT=table
DEFAULT_MARKDOWN_TEMPLATE=default

# Security settings
MIN_KEY_LENGTH=8
MAX_CREDENTIAL_SIZE=10240

# Performance settings
OPERATION_TIMEOUT=30000
MAX_SPEC_SIZE=52428800
